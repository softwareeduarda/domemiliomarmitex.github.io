/* RESET */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Roboto', sans-serif;
}

/* FUNDO GERAL */
body {
    background: linear-gradient(135deg, #fff1e6, #ffe0cc);
    min-height: 100vh;
    color: #2b1b12;
}

/* CABEÇALHO */
header {
    background: linear-gradient(135deg, #a34a12, #7c3308);
    padding: 60px 20px;
    text-align: center;
    color: #fff;
    box-shadow: 0 10px 30px rgba(0,0,0,0.25);
}

header h1 {
    font-size: 2.6rem;
    letter-spacing: 1px;
}

/* SEÇÕES */
section {
    max-width: 900px;
    margin: 40px auto;
    padding: 35px;
    background: rgba(255,255,255,0.85);
    backdrop-filter: blur(6px);
    border-radius: 22px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.12);
}

section h2 {
    color: #a34a12;
    margin-bottom: 25px;
    font-size: 1.8rem;
    border-left: 6px solid #a34a12;
    padding-left: 12px;
}

/* MARMITAS */
.marmita {
    display: grid;
    grid-template-columns: 1fr auto auto auto;
    align-items: center;
    gap: 15px;
    padding: 18px;
    margin-bottom: 15px;
    border-radius: 18px;
    background: linear-gradient(135deg, #ffe7d6, #fff3ea);
    box-shadow: 0 8px 18px rgba(0,0,0,0.08);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.marmita:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 28px rgba(0,0,0,0.15);
}

.marmita .nome {
    font-weight: 700;
    font-size: 1.1rem;
}

.marmita .valor {
    font-weight: bold;
    color: #7c3308;
}

/* BOTÃO + */
.marmita button {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: none;
    background: linear-gradient(135deg, #a34a12, #7c3308);
    color: #fff;
    font-size: 20px;
    cursor: pointer;
    box-shadow: 0 5px 12px rgba(0,0,0,0.2);
    transition: transform 0.15s ease;
}

.marmita button:hover {
    transform: scale(1.1);
}

.quantidade {
    font-weight: bold;
    font-size: 1.1rem;
}

/* FORMULÁRIO */
label {
    display: block;
    margin-top: 20px;
    margin-bottom: 6px;
    font-weight: bold;
}

select, textarea {
    width: 100%;
    padding: 14px;
    border-radius: 14px;
    border: 1px solid #d6b39c;
    background: #fff;
    font-size: 1rem;
}

/* TIPO PEDIDO */
.tipo-pedido {
    margin-top: 10px;
}

.tipo-pedido label {
    margin-right: 20px;
    font-weight: normal;
}

/* BOTÃO ENVIAR */
#enviar {
    margin-top: 30px;
    width: 100%;
    padding: 16px;
    border-radius: 18px;
    border: none;
    background: linear-gradient(135deg, #a34a12, #7c3308);
    color: #fff;
    font-size: 1.2rem;
    font-weight: bold;
    cursor: pointer;
    box-shadow: 0 10px 25px rgba(0,0,0,0.25);
    transition: transform 0.2s ease;
}

#enviar:hover {
    transform: scale(1.02);
}

/* RODAPÉ */
footer {
    text-align: center;
    padding: 30px;
    background: linear-gradient(135deg, #a34a12, #7c3308);
    color: #fff;
    margin-top: 60px;
    border-top-left-radius: 25px;
    border-top-right-radius: 25px;
}
